<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="8dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:background="@drawable/support_item_background"
        android:layout_height="wrap_content"
        android:padding="15dp">


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/textview_Request_Id_Tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="6dp"
            android:layout_marginTop="6dp"
            android:maxLines="1"
            android:minLines="1"
            android:padding="5dp"
            android:text="@string/package_id" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/textview_Request_Id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_marginTop="6dp"
            android:layout_toEndOf="@+id/textview_Request_Id_Tag"
            android:maxLines="1"
            android:minLines="1"
            android:padding="5dp" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/textview_Package_status_Tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textview_Request_Id_Tag"
            android:layout_marginStart="6dp"
            android:layout_marginTop="6dp"
            android:maxLines="1"
            android:minLines="1"
            android:padding="5dp"
            android:text="@string/package_Status_tag" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/textview_Request_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textview_Request_Id"
            android:layout_marginStart="6dp"
            android:layout_marginTop="6dp"
            android:layout_toEndOf="@+id/textview_Package_status_Tag"
            android:maxLines="1"
            android:minLines="1"
            android:padding="5dp" />


        <com.google.android.material.progressindicator.CircularProgressIndicator
            android:id="@+id/requestIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            app:indeterminateAnimationType="disjoint"
            app:indicatorDirectionLinear="startToEnd"
            app:trackCornerRadius="50dp"
            app:trackThickness="8dp" />


    </RelativeLayout>
</androidx.appcompat.widget.LinearLayoutCompat>
