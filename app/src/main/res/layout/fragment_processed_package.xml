<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.Packages.TabMainFragments.ProcessedPackageFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="15dp"
        android:layout_height="match_parent">

        <com.airbnb.lottie.LottieAnimationView
            android:layout_alignParentTop="true"
            android:id="@+id/delivery_animation_lottie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:layout_gravity="center"
            android:cropToPadding="true"
            app:lottie_autoPlay="true"
            app:lottie_loop="false"
            app:lottie_rawRes="@raw/package_successfully"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_below="@+id/delivery_animation_lottie"
            android:id="@+id/processed_Packages_RecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginTop="14dp"
            android:orientation="horizontal"
            android:padding="15dp"
            android:scrollbars="horizontal"
            tools:listitem="@layout/processed_item" />



    </RelativeLayout>

</androidx.appcompat.widget.LinearLayoutCompat>
